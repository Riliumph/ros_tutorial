FROM ubuntu:focal

ENV DEBIAN_FRONTEND noninteractive
# VNCç³»
RUN apt-get -qq update &&\
    apt-get -qq install --no-install-recommends -y\
    procps\
    peco\
    silversearcher-ag\
    vim\
    lsof \
    curl wget dnsutils iproute2 iputils-ping traceroute\
    novnc\
    websockify\
    && apt-get clean\
    && rm -rf /var/lib/apt/lists/*

COPY ./start.sh /start.sh
ENTRYPOINT [ "./start.sh" ]
